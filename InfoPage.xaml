<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinStarDate.maui.InfoPage"
             Title="Informazioni">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image
        x:Name="backgroundImage"
        Source="background.jpg"
        Aspect="AspectFill"
        HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" />

        <Label Text="Informazioni" FontSize="Title" Grid.Row="0"/>
        <Label Text="Autore: Giulio Sorrentino" TextColor="White"  Grid.Row="1"/>
        <Label Text="Licenza: GPL v3 o, secondo la tua opinione, qualsiasi versione successiva." Grid.Row="2" TextColor="White"/>
        <Button Margin="0,10,0,0" Text="Learn more"
                       Clicked="OnSito_Click"
                        BackgroundColor="{StaticResource Primary}"
                        Grid.Row="3"/>
    </Grid>
</ContentPage>